{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "noEmitOnError": true,
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "examples/**/*.ts",
    "env.d.ts"
  ]
}